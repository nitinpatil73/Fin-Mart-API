extends layout

block content
        .container
            form(id="login_form")
              .form-group
                label(for='email') Email address
                    
                input#email.form-control(type='email',name="email", aria-describedby='emailHelp', placeholder='Enter email', required)
                    
                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
                 
              .form-group
                label(for='pwd') Password
            
                input#pwd.form-control(type='password', placeholder='Password',required)
                
              a(class='btn btn-primary', id='auth_button') Submit

